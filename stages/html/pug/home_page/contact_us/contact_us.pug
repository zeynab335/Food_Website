.Contact_us#contact
    // start Contact_us header
    include ../../layout/stylesheet.pug
    +page-header("Contact us")
    // end Contact_us header
    
    ///////////////////////////////////////
    
    // start Contact_us content
    .container
        h2.heading_font.text-center For Any Inquiries Contact Me
        .row
            .col-lg-6.col-xs.Contact_us_col.animation.left

                // strat form of contact 
                form

                    .form-group
                        input.form-control.input-lg-6.input-xs.input_contact.form_acion(type="text" placeholder="Username" required) 
                        input.form-control.input-lg-6.input-xs.input_contact.form_acion(type="password" placeholder="******" required)
                    
                    .form-group
                        input.form-control.input-lg.input-xs.input_contact.form_acion(type="email" placeholder="kkk@***.com" required)
                    
                    .form-group
                        textarea.form-control.input-lg.input-xs.input_contact.form_acion(rows='4' placeholder="type here your questation:--" required)
                    
                    button.btn.btn-contact.btn-lg.btn-xs.btn-block.paragh_font(type="submit")  Send Now

                // end form of contact 
                /////////////////////////////////////////////////////////

